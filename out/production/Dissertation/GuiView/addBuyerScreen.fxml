<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="280.0" maxWidth="530.0" minHeight="280.0" minWidth="530.0" prefHeight="280.0" prefWidth="530.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GuiView.AddBuyerScreen">
   <children>
      <VBox layoutX="200.0" layoutY="70.0" prefHeight="90.0" prefWidth="244.0">
         <children>
            <TextField fx:id="Id" promptText="Please add new buyers id (int)">
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
            <TextField fx:id="Name" promptText="Please add new buyers name (string)">
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
            <TextField fx:id="numJobs" promptText="Add number of jobs bought(optional)">
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <VBox layoutX="100.0" layoutY="70.0" prefHeight="90.0" prefWidth="100.0">
         <children>
            <Label text="Buyer Id:">
               <font>
                  <Font size="14.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <Label text="Buyer Name:">
               <font>
                  <Font size="14.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <Label text="Jobs Bought:">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <Button fx:id="submit" layoutX="365.0" layoutY="200.0" mnemonicParsing="false" onAction="#handleSubmitButtonPressed" text="Add Buyer" />
      <Button fx:id="cancelButton" layoutX="100.0" layoutY="200.0" mnemonicParsing="false" onAction="#handleCancelButtonPressed" text="Go Back" />
      <Label fx:id="successfulMessage" layoutX="166.0" layoutY="172.0" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
